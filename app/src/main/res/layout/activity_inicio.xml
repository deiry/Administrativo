<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.estudiantelis.ventanainicio.InicioActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="ADMINISTRATIVO"
        android:textSize="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnGrupo"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        app:srcCompat="@mipmap/grupo"
        android:layout_alignTop="@+id/btnEstadisticas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/btnEstadisticas"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_toEndOf="@+id/btnGrupo"
        android:layout_toRightOf="@+id/btnGrupo"
        app:srcCompat="@mipmap/estadistica" />

    <ImageButton
        android:id="@+id/btnConfiguracion"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnEstadisticas"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        app:srcCompat="@mipmap/configuracion" />

</RelativeLayout>
